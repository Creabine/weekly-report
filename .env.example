# GitLab 配置（使用 Private Token 认证）
GITLAB_HOST=https://gitlab.mokahr.com
GITLAB_TOKEN=glpat-xxxxx

# Jira 配置（LDAP Basic Auth）
JIRA_HOST=https://jira.mokahr.com

# LDAP 账号（GitLab / Jira / Git author 共用）
LDAP_USERNAME=your_username
LDAP_PASSWORD=your_password

# Git 配置（目录下自动发现属于 GitLab 的仓库）
GIT_AUTHOR=your_username
GIT_REPOS_DIR=~/code

# 企业邮箱 SMTP 配置
SMTP_HOST=smtp.exmail.qq.com
SMTP_PORT=465
SMTP_USER=xxx@mokahr.com
SMTP_PASS=xxxxxx

# 收件人（多个用逗号分隔）
MAIL_TO=leader@mokahr.com
MAIL_CC=
MAIL_SUBJECT_TEMPLATE=【工作周报-前端】{dateRange} {author}
MAIL_AUTHOR_NAME=你的姓名
